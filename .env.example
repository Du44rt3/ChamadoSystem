# ARQUIVO DE EXEMPLO - Copie para .env e configure suas variáveis

# Configurações de Banco de Dados
DB_HOST=localhost
DB_NAME=chamados_db
DB_USER=root
DB_PASS=sua_senha_do_banco

# Configurações de Segurança
JWT_SECRET=gere_uma_chave_secreta_super_forte_aqui
SESSION_SECRET=gere_outra_chave_secreta_para_sessoes

# Configurações de Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=seu_email@gmail.com
MAIL_PASS=sua_senha_do_email
MAIL_FROM=noreply@elusinstrumentacao.com.br

# Configurações do Sistema
APP_ENV=development  # ou production
APP_DEBUG=false      # true apenas em desenvolvimento
APP_URL=http://localhost/chamados_system

# Configurações de Sessão Segura (production = true)
SESSION_SECURE=false      # true para HTTPS
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict
